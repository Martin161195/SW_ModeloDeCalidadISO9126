@model IEnumerable<WebAdmin.Models.Caracteristica>

@{
    ViewData["Title"] = "Index";
}

<h2>Carácteristicas</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCaracteristica">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdCaracteristica">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCaracteristica">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
