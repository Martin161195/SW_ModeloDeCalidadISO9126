{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@core/*": [
        "./src/core/*"
      ],
      "@environments/*": [
        "./src/environments/*"
      ],
      "@main/*": [
        "./src/main/*"
      ],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@settings/*": [
        "./src/settings/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@store/*": [
        "./src/root-store/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
